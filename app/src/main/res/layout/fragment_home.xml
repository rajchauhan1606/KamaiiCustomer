<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10dp"
            android:visibility="gone">

            <com.kamaii.customer.utils.CustomTextView
                android:id="@+id/CTVdiscover"
                android:layout_width="@dimen/dimen_80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_near_bg"
                android:gravity="center"
                android:padding="@dimen/dimen_5dp"
                android:text="@string/discover"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_12" />

            <com.kamaii.customer.utils.CustomTextView
                android:id="@+id/CTVnearby"
                android:layout_width="@dimen/dimen_80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:background="@drawable/button_disc_bg"
                android:gravity="center"
                android:padding="@dimen/dimen_5dp"
                android:text="@string/nearby"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>


        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_5dp"></FrameLayout>


    </LinearLayout>

</RelativeLayout>