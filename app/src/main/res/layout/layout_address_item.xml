<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="3dp"
        android:src="@drawable/ic_location_vector"
        android:tint="@color/dark_blue_color"></ImageView>

    <com.kamaii.customer.utils.CustomTextViewBold
        android:id="@+id/txt_recent_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/tap_to_select_address"
        android:padding="3dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="12sp" />


</LinearLayout>